extends layout

block content
  +pageHeader(pageHeader.title, pageHeader.actioncall)
  //- add job form
  .row
    .col-12
      form(id="addCustomer", name="addCustomer", action="", method="post", role="form")
        - if (error == "val")
          .alert.alert-danger(role="alert") All fields are required
        .form-group.row
          label.col-10.col-sm-3.col-form-label.text-sm-right(for="number") Customer Number:
          .col-12.col-sm-3
            input#number.form-control(name="number", class="customerNumber")
        .form-group.row
          label.col-10.col-sm-3.col-form-label.text-sm-right(for="name") Name:
          .col-12.col-sm-8
            input#name.form-control(name="name", class="customerName")
        button.btn.btn-primary.float-right Create Customer
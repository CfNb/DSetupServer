extends layout

block content
  .row.banner
    //- search box for smaller width screens...wide width uses search in navbar
    .col-12
      h1= pageHeader.title
      h2 
        a.card.banner-card(href="http://digital/digital") ! Click here to visit the Digital Wordpress Site !
      .d-md-none
        +search
      p #{pageHeader.actioncall}

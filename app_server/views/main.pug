      .card.banner-card
        .card-block.h3 Recent Graphics To Go Jobs
          span.float-right + New GtG
      .card.col-11
        .card-block
          h4
            a(href="/job") Job# 106555
            small &nbsp;
              i.fa.fa-star
              i.fa.fa-star
              i.fa.fa-star
              i.fa.fa-star-o
              i.fa.fa-star-o
